{
    "name": "onix-systems-php/hyperf-policy",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "policy",
        "authorization",
        "hyperf"
    ],
    "description": "Policy library for hyperf",
    "autoload": {
        "psr-4": {
            "OnixSystemsPHP\\HyperfPolicy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OnixSystemsPHP\\HyperfPolicy\\Test\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "onix-systems-php/hyperf-core": "^1.0",
        "hyperf/constants": "^2.2|^3.0",
        "hyperf/di": "^2.2|^3.0",
        "hyperf/server": "^2.2|^3.0",
        "hyperf/testing": "^2.2|^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Hyperf\\Core\\ConfigProvider"
        }
    }
}
